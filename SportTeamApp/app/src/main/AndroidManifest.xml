<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportteamapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_sport_team_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_sport_team_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportTeamApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ConvocarJugadorActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.ObservacionesEntrenamientoActivity"
            android:exported="true"
            android:parentActivityName=".Activities.EntrenamientosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ConvocatoriaActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.ObservacionesPartidoActivity"
            android:exported="true"
            android:parentActivityName=".Activities.PartidosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ObservacionesJugadorActivity"
            android:exported="true"
            android:parentActivityName=".Activities.JugadoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CrearJugadorActivity"
            android:exported="true"
            android:parentActivityName=".Activities.JugadoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CrearEntrenamientoActivity"
            android:exported="true"
            android:parentActivityName=".Activities.EntrenamientosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CrearPartidoActivity"
            android:exported="true"
            android:parentActivityName=".Activities.PartidosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.PartidosActivity"
            android:exported="true"
            android:parentActivityName=".Activities.IndexActivity" />
        <activity
            android:name=".Activities.EntrenamientosActivity"
            android:exported="true"
            android:parentActivityName=".Activities.IndexActivity" />
        <activity
            android:name=".Activities.JugadoresActivity"
            android:exported="true"
            android:parentActivityName=".Activities.IndexActivity" />
        <activity
            android:name=".Activities.MiPerfilActivity"
            android:exported="true"
            android:parentActivityName=".Activities.IndexActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.IndexActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>